<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent" android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@drawable/border" android:padding="3dip"
><!-- do not use android:layout_width="match_parent" for above !-->
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
  >
    <Button android:id="@+id/prevSect" android:layout_weight="0.5"
      android:layout_width="45dp" android:layout_height="wrap_content"
      android:text="⏮" android:textAllCaps="false"
      android:tooltipText="PreviousSection"
    />
    <Button android:id="@+id/prev" android:layout_weight="0.5"
      android:layout_width="45dp" android:layout_height="wrap_content"
      android:text="⏪" android:textAllCaps="false"
      android:tooltipText="Previous"
    />
    <!--TextView android:layout_weight="0.5" android:maxLines="1" android:ellipsize="end"
      android:text="Streams:" android:textSize="12sp"
      android:fontFamily="sans-serif-thin" android:textStyle="bold"
      android:gravity="center" android:textAlignment="center"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
    /-->
    <Spinner android:id="@+id/spinner1"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_gravity="center_vertical" android:layout_centerVertical="true"
      android:theme="@style/spinner1" 
    /><!-- http://coding-thoughts.blogspot.com/2013/11/help-my-spinner-is-too-wide.html -->
    <!-- @style/Spinner1 ==> .\src\main\res\style\styles.xml -->
    <Button android:id="@+id/next" android:layout_weight="0.5"
      android:layout_width="45dp" android:layout_height="wrap_content"
      android:text="⏩" android:textAllCaps="false"
      android:tooltipText="Next"
    />
    <Button android:id="@+id/nextSect" android:layout_weight="0.5"
      android:layout_width="45dp" android:layout_height="wrap_content"
      android:text="⏭" android:textAllCaps="false"
      android:tooltipText="NextSection"
    />
  </LinearLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:orientation="horizontal" android:gravity="center_vertical"
  >
    <TextView android:layout_weight="0.5" android:maxLines="1" android:ellipsize="end"
      android:text="📻" android:textSize="14sp"
      android:gravity="center" android:textAlignment="center"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_marginRight="6dp"
    />
    <Button android:id="@+id/openUrl" android:layout_weight="0.5"
      android:layout_width="28dp" android:layout_height="wrap_content"
      android:gravity="center" android:textAlignment="center"
      android:text="🌐" android:textSize="9sp"
      android:layout_marginRight="6dp"
      android:tooltipText="Open in Browser"
    />
    <Button android:id="@+id/play" android:layout_weight="0.5"
      android:layout_width="28dp" android:layout_height="wrap_content"
      android:gravity="center" android:textAlignment="center"
      android:text="▶" android:textSize="14sp"
      android:layout_marginRight="6dp"
      android:tooltipText="Play"
    />
      <Button android:id="@+id/conf" android:layout_weight="0.5"
        android:layout_width="28dp" android:layout_height="wrap_content"
        android:gravity="center" android:textAlignment="center"
        android:text="⚙" android:textSize="14sp"
        android:layout_marginRight="6dp"
        android:tooltipText="Settings"
      />
      <!--TextView android:layout_weight="0.5" android:maxLines="1" android:ellipsize="end"
        android:text="☸" android:textSize="14sp"
        android:gravity="center" android:textAlignment="center"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
      /-->
    <Button android:id="@+id/stop" android:layout_weight="0.5"
      android:layout_width="28dp" android:layout_height="wrap_content"
      android:gravity="center" android:textAlignment="center"
      android:text="⏹" android:textSize="14sp"
      android:layout_marginRight="6dp"
      android:tooltipText="Stop"
    />
    <Button android:id="@+id/timer" android:layout_weight="0.5"
      android:layout_width="28dp" android:layout_height="wrap_content"
      android:gravity="center" android:textAlignment="center"
      android:text="⏱" android:textSize="14sp"
      android:tooltipText="SleepTimer"
    />
    <TextView android:id="@+id/headphones"
      android:layout_weight="0.5" android:maxLines="1" android:ellipsize="end"
      android:text="🎧" android:textSize="14sp"
      android:gravity="center" android:textAlignment="center"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_marginLeft="6dp"
    />
  </LinearLayout>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
  >
    <TextView
      android:layout_weight="1" android:maxLines="1" android:ellipsize="end"
      android:text="🔉" android:textSize="11sp" android:layout_margin="0dp"
      android:gravity="center" android:textAlignment="center"
      android:layout_width="match_parent" android:layout_height="wrap_content"
    />
    <SeekBar android:id="@+id/volSeekBar" android:layout_weight="0.5" 
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      android:gravity="center" android:layout_margin="0dp"
      android:paddingStart="0dp" android:paddingEnd="0dp"
      android:max="100"
    ></SeekBar>
    <TextView
      android:layout_weight="1" android:maxLines="1" android:ellipsize="end"
      android:text="🔊" android:textSize="11sp" android:layout_margin="0dp"
      android:gravity="center" android:textAlignment="center"
      android:layout_width="match_parent" android:layout_height="wrap_content"
    />
  </LinearLayout>

</LinearLayout>
